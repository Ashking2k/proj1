#include <stdio.h>
int main()
{
	int a[10][10],b[10][10],s[10][10],r,c,i,j;
	printf("Enter the no. of rows and columns:");
	scanf("%d%d",&r,&c);
	for(i=0;i<r;i++)
	{
		for(j=0;j<c;j++)
		{
		printf("Enter a[%d][%d]->",i,j);
		scanf("%d",&a[i][j]);
	    }
	}
	for(i=0;i<r;i++)
	{
		for(j=0;j<c;j++)
		{
			printf("%d\t",a[i][j]);
		}
		printf("\n");
    }
		printf("\n");
		
		for(i=0;i<r;i++)
	{
		for(j=0;j<c;j++)
		{
		printf("Enter b[%d][%d]->",i,j);
		scanf("%d",&b[i][j]);
	    }
	}
	for(i=0;i<r;i++)
	{
		for(j=0;j<c;j++)
		{
			printf("%d\t",b[i][j]);
		}
		printf("\n");
    }
    printf("\n");
    
    for(i=0;i<r;i++)
	{
		for(j=0;j<c;j++)
		{
	  s[i][j]=a[i][j]+b[i][j];
	    }
	
    }
    for(i=0;i<r;i++)
	{
		for(j=0;j<c;j++)
		{
			printf("%d\t",s[i][j]);
		}
		printf("\n");
    }
    printf("\n");
	
	return 0;
}
	
    
